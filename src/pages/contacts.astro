---
import AppWrapper from '../building-blocks/AppWrapper.astro';
import { siteConfig } from '../config/site';
---

<AppWrapper fixedFooter title={`Contact - ${siteConfig.title}`} description="Get in touch with Kool Codez for creative web development projects and collaborations.">

	<!-- Contact Links -->
	<section class="max-w-lg mx-auto pt-20 flex items-center justify-center">
		<div class="space-y-8">
			<!-- Email Section -->
			<div class="text-center">
				<div class="mb-4">
					<span class="text-white/30 text-sm font-mono">Let's build something kool</span>
				</div>
				<a 
					href={`mailto:${siteConfig.email}?subject=Hello!`}
					class="block text-lg md:text-2xl text-white/70 hover:text-white transition-colors duration-150 font-mono"
				>
					{siteConfig.email}
				</a>
			</div>
			
			<!-- Divider -->
			<div class="flex items-center justify-center">
				<div class="flex-1 h-px bg-gradient-to-r from-transparent via-white/20 to-transparent"></div>
				<div class="px-4 text-white/20 text-xs font-mono">or</div>
				<div class="flex-1 h-px bg-gradient-to-r from-transparent via-white/20 to-transparent"></div>
			</div>
			
			<!-- Social Links -->
			<div class="flex justify-center gap-12">
				<a 
					href={siteConfig.social.github}
					target="_blank" 
					rel="noopener noreferrer"
					class="group relative"
				>
					<span class="text-white/50 group-hover:text-accent transition-colors duration-300 font-mono text-sm">
						GitHub
					</span>
				</a>
				<a 
					href={siteConfig.social.linkedin}
					target="_blank" 
					rel="noopener noreferrer"
					class="group relative"
				>
					<span class="text-white/50 group-hover:text-accent transition-colors duration-300 font-mono text-sm">
						LinkedIn
					</span>
				</a>
			</div>
		</div>
	</section>
</AppWrapper>
