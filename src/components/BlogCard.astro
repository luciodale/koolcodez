---
import { formatDate } from '../utils';

export type Props = {
	slug: string;
	date: Date;
};

const { slug, date } = Astro.props;
---

<article class="group h-44 w-full bg-white/5 border border-white/10 rounded-lg hover:bg-white/10 transition-colors duration-150">
	<a href={`/blog/${slug}`} class="flex flex-col justify-between gap-4 md:p-6 p-4 min-h-44">
			<div>
				<h3 class="text-lg md:text-xl line-clamp-1 font-medium text-white hover:text-accent transition-colors duration-150 mb-2">
					<slot name="title" />
				</h3>
				<div class="leading-relaxed line-clamp-2 text-sm md:text-base text-white/70">
					<slot name="description" />
				</div>
			</div>
			<time class="text-xs text-white/50 font-mono block mt-auto">
				{formatDate(date)}
			</time>
	</a>
</article>
