---
import { NAVBAR_LINKS, SITE_TITLE } from '../consts';
import GithubIcon from '../icons/GithubIcon.astro';
import LinkedInIcon from '../icons/LinkedInIcon.astro';
const currentYear = new Date().getFullYear();

const { fixed } = Astro.props;
  ---

<footer class={`bg-white/5 border-t border-white/10 py-8 ${fixed ? 'fixed bottom-0 w-full' : ''}`}>
  <div class="max-w-7xl mx-auto px-6">
    <div class="flex flex-col md:flex-row items-center gap-4">
      <!-- Logo and Brand -->
      <div class="flex flex-col md:flex-row items-center gap-3 md:w-1/3">
        <a href="/" class="block">
          <img 
            src="/kool-codez-illustration.svg" 
            alt="Kool Codez" 
            class="w-12 h-auto opacity-90 hover:opacity-100 transition-all duration-300 hover:scale-110 hover:rotate-3" 
          />
        </a>
        <div class="text-white/70 text-sm">
          Â© {currentYear} {SITE_TITLE}
        </div>
      </div>
      
      <!-- Navigation Links - Centered -->
      <div class="flex gap-6 md:w-1/3 justify-center">
        {NAVBAR_LINKS.slice(1).map((link) => (
          <a 
            href={link.href} 
            class="text-white/70 font-medium hover:text-accent transition-colors duration-200 text-sm"
          >
            {link.name}
          </a>
        ))}
      </div>
      
      <!-- Social Links -->
      <div class="flex gap-4 md:w-1/3 justify-end">
        <a 
          href="https://github.com/luciodale" 
          target="_blank" 
          rel="noopener noreferrer"
          class="transition-colors duration-200"
        >
          <GithubIcon color="text-white/50 hover:text-accent transition-colors duration-150" />
        </a>
        <a 
          href="https://www.linkedin.com/in/lucio-d-alessandro-38639bb6/" 
          target="_blank" 
          rel="noopener noreferrer"
        >
          <LinkedInIcon color="text-white/50 hover:text-accent transition-colors duration-150" />
        </a>
      </div>
    </div>
  </div>
</footer>
